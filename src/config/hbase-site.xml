    <value>1000</value>
</property>

<property>
    <name>hbase.regionserver.optionallogflushinterval</name>
    <value>10000</value>
</property>

<property>
    <name>hbase.hregion.memstore.block.multiplier</name>
    <value>8</value>
</property>

<property>
    <name>zookeeper.session.timeout</name>
